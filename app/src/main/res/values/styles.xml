<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EditSearchTextStyle">
        <item name="android:singleLine">true</item>
        <item name="android:paddingStart">@dimen/dp16</item>
        <item name="android:paddingEnd">@dimen/dp16</item>
        <item name="android:paddingTop">@dimen/dp18</item>
        <item name="android:paddingBottom">@dimen/dp18</item>
        <item name="android:background">@drawable/shape_edit_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="fontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="EditSearchClearButton">
        <item name="android:background">@color/transparent</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:src">@drawable/ic_search</item>
    </style>

    <style name="ApplyButtonStyle">
        <!-- незабудьте во время верстки layout_marginHorizontal dp16 -->
        <item name="android:backgroundTint">@color/fab_color</item>
        <item name="cornerRadius">@dimen/dp12</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="fontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>

    <style name="RoundedImageViewStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="hintTextColor">@color/blue</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="CustomTextInputLayout2" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_marginTop">@dimen/dp16</item>
        <item name="boxCollapsedPaddingTop">@dimen/dp8</item>
        <item name="android:textColorHint">@color/fab_color</item>
        <item name="hintTextColor">@color/fab_color</item>
        <item name="boxBackgroundColor">@color/card_item_color</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dp12</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dp12</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dp12</item>
        <item name="boxCornerRadiusTopStart">@dimen/dp12</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="expandedHintEnabled">false</item>
        <item name="android:layout_marginHorizontal">@dimen/dp16</item>
        <item name="hintTextAppearance">@style/TextAppearance.Hint</item>
    </style>

    <style name="TextAppearance.Hint" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">14sp</item>
    </style>

</resources>